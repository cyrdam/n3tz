---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
  description: 'Contact n3tz for support, collaboration, or inquiries.',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <ContactUs
    subtitle="We're excited to hear from you! Reach out with any questions or collaboration ideas. Let's make something great together."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name*',
        required: true,
        placeholder: 'John Doe',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Company',
        placeholder: 'n3tz',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email*',
        required: true,
        placeholder: 'john@n3tz.io',
      },
    ]}
    textarea={{
      label: 'Message*',
      placeholder: 'Type your message here...',
      required: true,
    }}
    disclaimer={{
      required: true,
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="You will receive a response within 24 hours."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Support and Collaboration"
    items={[
      {
        title: 'General Inquiries',
        description:
          'Connect with us for any questions, understanding our projects, or learning more about n3tzâ€™s mission and values.',
      },
      {
        title: 'Collaborative Projects',
        description:
          'Discuss your project ideas, explore collaboration opportunities, and learn about how we can work together to bring your vision to life.',
      },
      {
        title: 'Technical Assistance',
        description:
          "Reach out for help with web applications, troubleshooting, or any technical challenges you're facing with our digital solutions.",
      },
    ]}
  />
</Layout>
