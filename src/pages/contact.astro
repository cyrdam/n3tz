---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <ContactUs
    subtitle="For quicker answers, explore our FAQs section. You may find the solution you're looking  for right there! If not, our support team is delighted to help you."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name*',
        required: true,
        placeholder: 'John Doe',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Company',
        placeholder: 'n3tz',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email*',
        required: true,
        placeholder: 'john@n3tz.io',
      },
    ]}
    textarea={{
      label: 'Message*',
      placeholder: 'Type your message here...',
      required: true,
    }}
    disclaimer={{
      required: true,
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="You will receive a response within 24 hours."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Dedicated Support at Every Step"
    items={[
      {
        title: 'Client Assistance',
        description:
          'Connect with us for help with project management, understanding our services, billing inquiries, or general questions about n3tzâ€™s offerings.',
      },
      {
        title: 'Sales & Custom Solutions',
        description:
          'Discuss your specific project needs, explore customization possibilities, learn about our development process, or inquire about quotes and timelines.',
      },
      {
        title: 'Technical Support',
        description:
          "Reach out for technical assistance with web applications, troubleshooting, compatibility issues, or any challenges you're facing with our digital solutions.",
      },
    ]}
  />
</Layout>
