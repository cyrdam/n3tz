---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline is:global>
  :root {
    --aw-font-sans: 'Poppins';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: rgb(238, 11, 116);
    --aw-color-secondary: rgb(250, 86, 23);
    --aw-color-accent: rgb(250, 86, 23);

    --aw-color-text-heading: rgb(0, 0, 0);
    --aw-color-text-default: rgb(16, 16, 16);
    --aw-color-text-muted: rgb(16, 16, 16 / 66%);
    --aw-color-bg-page: rgb(255, 250, 240);

    --aw-color-bg-page-dark: rgb(3, 6, 32);
    --aw-color-bg-page-light: rgb(255, 250, 240);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Poppins';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: rgb(238, 11, 116);
    --aw-color-secondary: rgb(250, 86, 23);
    --aw-color-accent: rgb(250, 86, 23);

    --aw-color-text-heading: rgb(0, 0, 0);
    --aw-color-text-default: rgb(229, 236, 246);
    --aw-color-text-muted: rgb(229, 236, 246 / 66%);
    --aw-color-bg-page: var(--aw-color-bg-page-dark);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
